              itemStyle: {
                color: "rgba(87, 181, 231, 1)",
              },
              barWidth: "40%",
              emphasis: {
                itemStyle: {
                  color: "rgba(87, 181, 231, 0.8)",
                },
              },
            },
          ],
        };
        genreChart.setOption(genreOption);

        // Gráfico de Jogos Mais Avaliados
        const reviewsChart = echarts.init(document.getElementById("reviewsChart"));
        const reviewsOption = {
          animation: false,
          tooltip: {
            trigger: "axis",
            axisPointer: {
              type: "shadow",
            },
            backgroundColor: "rgba(255, 255, 255, 0.9)",
            borderColor: "#e2e8f0",
            borderWidth: 1,
            textStyle: {
              color: "#1f2937",
            },
          },
          grid: {
            left: "3%",
            right: "4%",
            bottom: "3%",
            top: "3%",
            containLabel: true,
          },
          xAxis: {
            type: "value",
            axisLine: {
              lineStyle: {
                color: "#e2e8f0",
              },
            },
            axisLabel: {
              color: "#1f2937",
            },
            splitLine: {
              lineStyle: {
                color: "#f1f5f9",
              },
            },
          },
          yAxis: {
            type: "category",
            data: [
              "Cyber Horizon 2077",
              "Pro Soccer 25",
              "Wilderness Chronicles",
              "Tactical Force",
              "Legends of Eldoria",
            ],
            axisLine: {
              lineStyle: {
                color: "#e2e8f0",
              },
            },
            axisLabel: {
              color: "#1f2937",
            },
          },
          series: [
            {
              name: "Número de Avaliações",
              type: "bar",
              data: [8743, 6128, 5127, 4932, 3842],
              itemStyle: {
                color: "rgba(251, 191, 114, 1)",
              },
              barWidth: "60%",
              emphasis: {
                itemStyle: {
                  color: "rgba(251, 191, 114, 0.8)",
                },
              },
            },
          ],
        };
        reviewsChart.setOption(reviewsOption);

        // Resize charts when window size changes
        window.addEventListener("resize", function () {
          genreChart.resize();
          reviewsChart.resize();
        });
      });
    </script>
  </body>
</html>
